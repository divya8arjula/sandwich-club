<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/sandwich_picture_content_description"
        android:scaleType="centerCrop"

        />

    <TextView
        android:id="@+id/origin_tv_label"
        android:layout_below="@id/image_iv"
        android:text="@string/detail_origin_label"
        android:layout_width="@dimen/label_min_width"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/origin_tv_value"
        android:layout_below="@id/image_iv"
        android:layout_toRightOf="@id/origin_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/also_known_as_tv_label"
        android:layout_below="@id/origin_tv_label"
        android:layout_width="@dimen/label_min_width"
        android:layout_height="wrap_content"
        android:text="@string/detail_also_known_as_label"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/also_known_tv_value"
        android:layout_width="@dimen/label_min_width"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/also_known_as_tv_label"
        android:orientation="vertical"
        android:layout_below="@id/origin_tv_value">

    </LinearLayout>

    <TextView
        android:id="@+id/ingredients_label"
        android:layout_below="@id/also_known_tv_value"
        android:layout_width="@dimen/label_min_width"
        android:layout_height="wrap_content"
        android:text="@string/detail_ingredients_label"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/ingredients_value"
        android:layout_toRightOf="@id/ingredients_label"
        android:layout_below="@id/also_known_tv_value"
        android:layout_width="@dimen/label_min_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/description_label"
        android:layout_below="@id/ingredients_value"
        android:layout_width="@dimen/label_min_width"
        android:layout_height="wrap_content"
        android:text="@string/detail_description_label"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/description_tv_value"
        android:layout_below="@id/ingredients_value"
        android:layout_toRightOf="@id/description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
</ScrollView>

